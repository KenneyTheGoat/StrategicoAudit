@page "/user/inventory-adjust"

@model StrategicoAudit.Api.Pages.User.InventoryAdjustModel

<h2>User Action: Inventory Adjust</h2>

<p><b>Acting as:</b> @Model.ActorDisplay</p>

<form method="post">
  <label>Warehouse</label><br />
  <input asp-for="WarehouseId" /><br /><br />

  <label>SKU</label><br />
  <input asp-for="Sku" /><br /><br />

  <label>New On Hand</label><br />
  <input asp-for="NewOnHand" type="number" /><br /><br />

  <label>Reason</label><br />
  <input asp-for="Reason" /><br /><br />

  <button type="submit">Submit Adjustment</button>
</form>

@if (!string.IsNullOrWhiteSpace(Model.Message))
{
  <p><b>@Model.Message</b></p>
}
