@page "/user/inventory-adjust"
@model StrategicoAudit.Api.Pages.User.InventoryAdjustModel
@{
  ViewData["Title"] = "User Action";
}

<div class="d-flex justify-content-between align-items-center mb-3">
  <div>
    <h2 class="page-title mb-0">Inventory Adjustment</h2>
    <div class="small-muted">User performs an operational action â†’ inventory + audit log written.</div>
  </div>
  <span class="badge badge-soft">@Model.ActorDisplay</span>
</div>

<div class="card shadow-sm p-4">
  <form method="post" class="row g-3">
    <div class="col-md-4">
      <label class="form-label">Warehouse</label>
      <input class="form-control" asp-for="WarehouseId" />
    </div>

    <div class="col-md-4">
      <label class="form-label">SKU</label>
      <input class="form-control" asp-for="Sku" />
    </div>

    <div class="col-md-4">
      <label class="form-label">New On Hand</label>
      <input class="form-control" asp-for="NewOnHand" type="number" />
    </div>

    <div class="col-12">
      <label class="form-label">Reason</label>
      <input class="form-control" asp-for="Reason" />
    </div>

    <div class="col-12 d-flex gap-2">
      <button class="btn btn-primary" type="submit">Submit Adjustment</button>
      <a class="btn btn-outline-secondary" href="/admin/audit">Go to Admin Audit</a>
    </div>
  </form>

  @if (!string.IsNullOrWhiteSpace(Model.Message))
  {
    <div class="alert alert-success mt-3 mb-0">@Model.Message</div>
  }
</div>
